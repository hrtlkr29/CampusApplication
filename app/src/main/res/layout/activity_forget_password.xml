
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTint">


    <ImageView

        android:id="@+id/ic_logo"
        android:layout_width="@dimen/image_size_width"
        android:layout_height="@dimen/image_size_height"
        android:src="@drawable/ico_troy"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textSize="24sp"
        android:id="@+id/txtReset"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ic_logo"/>

    <EditText
        android:paddingLeft="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/bg_tb_login"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:id="@+id/txtForgotEmail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width"
        android:hint="Enter your email address"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtReset"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/margin_top_normal"
        android:inputType="textEmailAddress"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnSendResetEmail"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width"
        android:text="Send a password reset email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtForgotEmail"
        android:layout_marginTop="@dimen/margin_top_normal"
        android:layout_alignStart="@+id/txtPass"
        android:layout_alignEnd="@+id/txtPass"
        android:background="@color/dark_tint"/>






</RelativeLayout>