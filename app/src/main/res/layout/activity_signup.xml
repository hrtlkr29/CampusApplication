<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorTint">


    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="@dimen/image_size_width"
        android:layout_height="@dimen/image_size_height"
        android:src="@drawable/ico_troy"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

<EditText
    android:layout_marginTop="@dimen/margin_top"
    android:paddingLeft="@dimen/medium_padding"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:background="@drawable/bg_tb_login"
    android:textColor="@color/grey"
    android:textColorHint="@color/grey"
    android:id="@+id/txtEmail"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width"
    android:hint="@string/user_name"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/ic_logo"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:inputType="textEmailAddress"
    />

<EditText
    android:paddingLeft="@dimen/medium_padding"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:background="@drawable/bg_tb_login"
    android:textColor="@color/grey"
    android:textColorHint="@color/grey"
    android:id="@+id/txtPass"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width"
    android:hint="@string/pass_word"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txtEmail"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin_top_normal"
    android:inputType="textPassword"/>

<EditText
    android:paddingLeft="@dimen/medium_padding"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:background="@drawable/bg_tb_login"
    android:textColor="@color/grey"
    android:textColorHint="@color/grey"
    android:id="@+id/txtRePass"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width"
    android:hint="Retype password"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txtPass"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin_top_normal"
    android:inputType="textPassword"/>

<EditText
    android:paddingLeft="@dimen/medium_padding"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:background="@drawable/bg_tb_login"
    android:textColor="@color/grey"
    android:textColorHint="@color/grey"
    android:id="@+id/txtFName"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width"
    android:hint="First name"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txtRePass"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin_top_normal"
    android:inputType="text"/>

<EditText
    android:paddingLeft="@dimen/medium_padding"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:background="@drawable/bg_tb_login"
    android:textColor="@color/grey"
    android:textColorHint="@color/grey"
    android:id="@+id/txtLName"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width"
    android:hint="Last name"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txtFName"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin_top_normal"
    android:inputType="text"/>

<Button
    android:textAllCaps="false"
    android:id="@+id/btnLogin"
    android:textSize="@dimen/text_size"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width"
    android:text="Sign up!"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txtLName"
    android:layout_marginTop="@dimen/margin_top_normal"
    android:layout_alignStart="@+id/txtPass"
    android:layout_alignEnd="@+id/txtPass"
    android:background="@color/dark_tint"/>



</RelativeLayout>