<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/btnAcademic"
            android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:background="@drawable/ico_academic_red"/>
        <ImageButton
            android:id="@+id/btnEvent"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/ico_event_black"/>
        <ImageButton
            android:id="@+id/btnSport"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/ico_sport_black"/>
        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/ico_setting_black"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey">
    </View>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>